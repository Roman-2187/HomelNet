<UserControl x:Class="WpfHomeNet.Controls.RegistrationViewControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:viewmodels="clr-namespace:WpfHomeNet.ViewModels"             
 xmlns:converter="clr-namespace:WpfHomeNet.Converters"
 Visibility="{Binding ControlVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
 x:Name="RegistrationControl"
 mc:Ignorable="d" 
 Background="Transparent"
 BorderThickness="0"   
 Height="Auto" 
 Width="Auto"
             Margin="10"
  >
           
    <UserControl.Resources>
        <converter:StateToBrushConverter x:Key="StateToBrushConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!-- Размер шрифта, например 12 pt -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ContentControl Style="{StaticResource TripleBorderStyle}" Padding="4" Background="#00000000">
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
               
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
               
            </Grid.ColumnDefinitions> 
            
            <!-- USER NAME -->
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                
                <Label Content="Имя пользователя:" VerticalAlignment="Center"/>
                
                <TextBox
                Text="{Binding UserData.UserName, UpdateSourceTrigger=PropertyChanged}"
                BorderBrush="{Binding ValidationResults[NameType].State, Converter={StaticResource StateToBrushConverter}}"
                IsEnabled="{Binding AreFieldsEnabled}"
                Margin="0,0,0,0"
                Padding="0" Height="30"
               />
                
                <Label
                Content="{Binding ValidationResults[NameType].Message}"
                Foreground="{Binding ValidationResults[NameType].State, Converter={StaticResource StateToBrushConverter}}"
                FontSize="11"
                HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- EMAIL -->
            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" Margin="0,0,0,10">
                
                <Label Content="Email:" VerticalAlignment="Center"/>

                <TextBox 
                Text="{Binding UserData.Email, UpdateSourceTrigger=PropertyChanged}"
                BorderBrush="{Binding ValidationResults[EmailType].State, Converter={StaticResource StateToBrushConverter}}"
                IsEnabled="{Binding AreFieldsEnabled}"
                Margin="0,0,0,0"
                Padding="0" Height="30" >
                   


                </TextBox>

                    <Label
                Content="{Binding ValidationResults[EmailType].Message}"
                Foreground="{Binding ValidationResults[EmailType].State, Converter={StaticResource StateToBrushConverter}}"
                FontSize="11"
                HorizontalAlignment="Center"/>
                
            </StackPanel>

            <!-- PASSWORD -->
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                
                <Label Content="Пароль:" VerticalAlignment="Center"/>
                
                <TextBox
                Text="{Binding UserData.Password, UpdateSourceTrigger=PropertyChanged}"
                BorderBrush="{Binding ValidationResults[PasswordType].State, Converter={StaticResource StateToBrushConverter}}"
                IsEnabled="{Binding AreFieldsEnabled}"
                Margin="0,0,0,0"
               Padding="0" Height="30"
                />
                
                <Label
                Content="{Binding ValidationResults[PasswordType].Message}"
                Foreground="{Binding ValidationResults[PasswordType].State, Converter={StaticResource StateToBrushConverter}}"
                FontSize="11"
                HorizontalAlignment="Center"/>
                
            </StackPanel>

           

            <!-- PHONE -->
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                
                <Label Content="Телефон:" VerticalAlignment="Center"/>
                
                <TextBox
                Text="{Binding UserData.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                BorderBrush="{Binding ValidationResults[PhoneType].State, Converter={StaticResource StateToBrushConverter}}"
                IsEnabled="{Binding AreFieldsEnabled}"
                Margin="0,0,0,0"
                Padding="0" Height="30" 
                />
                
                <Label
                Content="{Binding ValidationResults[PhoneType].Message}"
                Foreground="{Binding ValidationResults[PhoneType].State, Converter={StaticResource StateToBrushConverter}}"
                FontSize="11"
                HorizontalAlignment="Center"/>
            </StackPanel>



            <Label Grid.Row="4" Content="{Binding StatusMessage}" />
                    

            <!-- BUTTONS -->
            <StackPanel
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,15,0,0">
               
                <Button
                Content="Отмена"
                Command="{Binding CancelCommand}"
                Margin="0,0,10,0"
               />
                
                <Button
                Content="{Binding SubmitButtonText}"
                Command="{Binding ToggleRegistrationCommand}"  
                IsEnabled="{Binding ToggleRegistrationCommand.CanExecute}"
               
                />
            </StackPanel>
        </Grid>
    </ContentControl>



</UserControl>

