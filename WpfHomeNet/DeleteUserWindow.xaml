<Window x:Class="WpfHomeNet.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удаление пользователя" 
        Height="250" Width="350"
        WindowStyle="None" AllowsTransparency="True"
        BorderThickness="2" BorderBrush="Black"
        WindowStartupLocation="CenterOwner" Background="#FF9CB486">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Выберите пользователя для удаления:"
                   FontSize="14"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
          <TextBox x:Name="userIdTextBox" 
         Width="150" 
         Margin="5">
    <TextBox.Template>
        <ControlTemplate TargetType="{x:Type TextBox}">
            <Grid>
                <Border Name="border" BorderThickness="1" BorderBrush="Gray" Background="White">
                    <ScrollViewer Margin="0" x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                </Border>
                <TextBlock x:Name="textPrompt" 
                           Text="Введите ID" 
                           Foreground="Gray" 
                           Margin="5,3,0,0"
                           Visibility="Collapsed"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter TargetName="textPrompt" Property="Visibility" Value="Visible"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter TargetName="textPrompt" Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </TextBox.Template>
</TextBox>

            <Button x:Name="searchButton" 
                   Content="Найти" 
                   Click="SearchUser_Click" 
                   Margin="5"/>
        </StackPanel>

        <ListBox x:Name="userListBox" 
                 Grid.Row="2"
                 DisplayMemberPath="DisplayInfo"
                 SelectedValuePath="Id"
                 Margin="5" SelectionChanged="userListBox_SelectionChanged"
                 Height="100"/>


        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
            <Button x:Name="yesButton" 
       Content="Удалить" 
       Click="YesButton_Click" 
       Margin="5"
       IsEnabled="{Binding CanDelete}"/>
            <Button x:Name="noButton" 
                   Content="Отмена" 
                   Click="NoButton_Click" 
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

