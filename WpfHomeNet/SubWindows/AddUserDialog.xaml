<Window x:Class="HomeSocialNetwork.AddUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя" 
        Height="250" Width="410"
        WindowStyle="None" AllowsTransparency="True"
        BorderThickness="2" BorderBrush="Black"
        WindowStartupLocation="CenterOwner" Background="#FF9CB486">

    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0.2"/>
            <Setter Property="BorderBrush" Value="Black"/>

            <!-- Триггеры для эффектов -->
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsFocused" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                </MultiTrigger>

                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsFocused" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="LightBlue"/>
                    <Setter Property="Background" Value="LightBlue"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0.2"/>
            <Setter Property="BorderBrush" Value="Black"/>

            <!-- Триггеры для эффектов -->
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsFocused" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                </MultiTrigger>

                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsFocused" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="LightBlue"/>
                    <Setter Property="Background" Value="LightBlue"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- НОВЫЙ СТИЛЬ ДЛЯ КНОПОК -->
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="97"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2,5,0,0"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.2"/>
            <Setter Property="Background" Value="#00DDDDDD"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <!-- Эффекты при наведении -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80DDDDDD"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CCDDDDDD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    





    <Grid Margin="15,30,15,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- First Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Имя (FirstName):" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="FirstNameTextBox" ToolTip="Обязательное поле"/>

        <!-- Last Name -->
        <Label Grid.Row="2" Grid.Column="0" Content="Фамилия (LastName):" FontWeight="Bold"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="LastNameTextBox" ToolTip="Можно не указывать"/>

        <!-- Phone Number -->
        <Label Grid.Row="3" Grid.Column="0" Content="Телефон (PhoneNumber):" FontWeight="Bold"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="PhoneNumberTextBox" 
                ToolTip="Формат: +7 XXX XXX-XX-XX"/>

        <!-- Email -->
        <Label Grid.Row="4" Grid.Column="0" Content="Email:" FontWeight="Bold"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="EmailTextBox" 
                ToolTip="Обязательное поле, уникальный адрес"/>

        <!-- Пароль -->
        <Label Grid.Row="5" Grid.Column="0" Content="Пароль (Password):" FontWeight="Bold"/>
        <PasswordBox Grid.Row="5" Grid.Column="1" x:Name="PasswordBox" 
                    ToolTip="Обязательное поле, минимум 6 символов"/>

        <!-- Кнопки -->



        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" 
    HorizontalAlignment="Right">
            <Button Content="ОК" Click="OkButton_Click" 
        />

            <Button Content="Отмена" 
         
        Width="97" 
        
        Click="CancelButton_Click" 
        IsCancel="True"
        
       
        />
        </StackPanel>
    </Grid>
</Window>


