<Window x:Class="WpfHomeNet.DeleteUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удаление пользователя" 
        Height="250"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"              
        WindowStartupLocation="CenterOwner"
        Background="Transparent">

    <ContentControl Style="{StaticResource InnerBorderSolidColorStyle}" >

        <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

           
                <TextBlock Grid.Row="0" 
                Text="Выберите пользователя для удаления:"
                FontWeight="Bold"
                FontSize="14"
                HorizontalAlignment="Center"  />
           
        <StackPanel Grid.Row="1" Margin="10,0,0,0"
                    Orientation="Horizontal" >
              <Border CornerRadius="5">  
                  <TextBox x:Name="userIdTextBox"
                     Width="200"  
                     KeyDown="UserIdTextBox_KeyDown" 
                
                     Text="Введите ID" Margin="0,0,60,0" BorderThickness="2"
                     Foreground="DarkSlateGray"
                     GotFocus="UserIdTextBox_GotFocus"
                     LostFocus="UserIdTextBox_LostFocus" /> 
              </Border>
            <Button x:Name="searchButton" 
                Content="Найти" 
                     Width="90" Height="35" FontSize="10"
                Click="SearchUser_Click" 
                 Background="Transparent"/>
        </StackPanel>
        <Border Grid.Row="2"               
        BorderThickness="0.3"
        BorderBrush="Black"
        CornerRadius="8"  Background="#7FFFFFFF"  Margin="5" >


                <ListBox  Style="{StaticResource RoundedListBox}" x:Name="userListBox"  
             DisplayMemberPath="DisplayInfo"
             SelectedValuePath="Id"  Margin="5"  
             SelectionChanged="UserListBox_SelectionChanged"
            Background="Transparent" 
            >
                

                <ListBox.Resources>
                    <Style TargetType="{x:Type ScrollViewer}">
                        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
                    </Style>
                </ListBox.Resources>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                           
                            <Style.Triggers>
                            <Trigger Property="Tag" Value="Found">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

        <StackPanel
            Grid.Row="3" 
            Orientation="Horizontal"
            HorizontalAlignment="Right"  Width="Auto" >
            <Button 
                x:Name="yesButton"  Width="80" 
                Content="Удалить" Margin="0,0,10,0"  Height="35"
                Click="YesButton_Click" 
                
                IsEnabled="{Binding CanDelete}" Background="#00DDDDDD"/>
            <Button Margin="0,0,5,0"
                x:Name="noButton"  
                Content="Отмена" Width="80" Height="35"
                Click="NoButton_Click" 
                Background="Transparent"/>
        </StackPanel>
    </Grid>
    </ContentControl>
</Window>

